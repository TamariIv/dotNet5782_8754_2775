<Window x:Class="PL.DroneWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="DroneWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="94*"/>
            <RowDefinition Height="341*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Name="middle1" Grid.ColumnSpan="2" Margin="133,0,0,0" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label x:Name="lblEnterId" Content="Enter drone ID: " FontSize="15" HorizontalAlignment="Left" Margin="0,5,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Left" Height=" 40" Width="115" Grid.Row="2"/>
            <Label x:Name="lblEnterModel" Content="Enter model:" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Center" Height="40" Width="115" HorizontalContentAlignment="Left" Grid.Row="3"/>
            <Label x:Name="lblChooseWeight" Content="Choose maximum weight:" FontSize="15" HorizontalAlignment="Left" Margin="0,6,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Left" Height="40" Width="223" Grid.Row="4"/>
            <Label x:Name="lblChooseStation" Content="Choose station" FontSize="15" HorizontalAlignment="Left" Margin="-4,0,0,0" VerticalAlignment="Center" Height="40" Width="116" Grid.Row="5"/>
            <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Left" Margin="0,27,0,0" Grid.Row="6" VerticalAlignment="Top" Height="26" Width="115" Grid.RowSpan="2" Click="btnAdd_Click"/>
            <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="152,27,0,0" Grid.Row="6" VerticalAlignment="Top" Height="26" Width="115" Click="btnCancel_Click"/>
        </Grid>

        <Grid Name="middle2" Grid.Column="2" Grid.ColumnSpan="2" Margin="0,0,133,0" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <ComboBox x:Name="comboWeightSelcetor" HorizontalAlignment="Left" VerticalAlignment="Center" Width="227" Height="40"  Grid.Row="4" SelectionChanged="comboWeightSelcetor_SelectionChanged">
                <Button Content="Button"/>
            </ComboBox>
            <TextBox x:Name="txtDroneModel" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="227" Height="40" TextChanged="TextBox_TextChanged_DroneModel" Grid.Row="3"/>
            <TextBox x:Name="txtDroneId" HorizontalAlignment="Left" MaxLength="5" TextWrapping="Wrap"  PreviewKeyDown="TextBox_OnlyNumbers_PreviewKeyDown" VerticalAlignment="Center" Width="227" Height="40"  TextChanged="TextBox_TextChanged_DroneId" Grid.Row="2"/>
            <ComboBox x:Name="comboStationSelector" HorizontalAlignment="Left" Grid.Row="5" VerticalAlignment="Center" Width="227" Height="40" SelectionChanged="comboStationSelector_SelectionChanged"/>
            <Label x:Name="lblNewModel" Content="Enter new model:" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Grid.Row="1"/>

        </Grid>

        <TextBox x:Name="txtUpdateDroneModel" HorizontalAlignment="Left" TextChanged="TextBox_TextChanged_UpdateModel" TextWrapping="Wrap" VerticalAlignment="Top" Width="227" Height="40" Grid.Column="2" Margin="0,10,0,0" Grid.Row="1"/>
        <Button x:Name="btnFinalUpdate" Content="Update" Grid.Column="2" HorizontalAlignment="Left" Margin="0,71,0,0" Grid.Row="1" VerticalAlignment="Top" Height="25" Width="97" Click="btnFinalUpdate_Click"/>
        <Button x:Name="btnSendToCharge" Content="Send to Charge" Grid.Column="2" HorizontalAlignment="Left" Margin="0,113,0,0" Grid.Row="1" VerticalAlignment="Top" Height="25" Width="97" Click="btnSendToCharge_Click"/>
        <Button x:Name="btnSendToDelivery" Content="Delivery" Grid.Column="2" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Center" Height="25" Width="97" Click="btnSendToDelivery_Click"/>
        <Button x:Name="btnFreeDroneFromCharging" Content="Free" Grid.Column="2" HorizontalAlignment="Left" Margin="0,113,0,0" Grid.Row="1" VerticalAlignment="Top" Height="25" Width="97" Click="btnFreeDroneFromCharging_Click" />
        <Button x:Name="btnPickUpParcel" Content="Pick-Up Parcel" Grid.Column="2" HorizontalAlignment="Left" Margin="0,113,0,0" Grid.Row="1" VerticalAlignment="Top" Height="25" Width="97" Click="btnPickUpParcel_Click"/>
        <Button x:Name="btnDeliverParcel" Content="Deliver" Grid.Column="2" HorizontalAlignment="Left" Margin="0,113,0,0" Grid.Row="1" VerticalAlignment="Top" Height="25" Width="97" Click="btnDeliverParcel_Click"/>

        <Label x:Name="lblIdData" Content="Drone ID:" FontWeight="Bold"  HorizontalAlignment="Left" Margin="67,81,0,0" VerticalAlignment="Top" Height="40" Width="113" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
        <TextBox x:Name="txtIdData" HorizontalAlignment="Left" Margin="52,81,0,0" IsReadOnly="True" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" Height="35" TextChanged="txtIdData_TextChanged" Grid.Column="1" Grid.RowSpan="2"/>
        <Label x:Name="lblModelData" Content="Model:"  FontWeight="Bold" HorizontalAlignment="Left" Margin="67,21,0,0" Grid.Row="1" VerticalAlignment="Top" Height="39" Width="113" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtModelData" Grid.Column="1" IsReadOnly="True" HorizontalAlignment="Left" Margin="52,22,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" Height="41" TextChanged="txtModelData_TextChanged"/>
        <Label x:Name="lblWeightData" Content="Maximum weight:"  FontWeight="Bold" HorizontalAlignment="Left" Margin="67,56,0,0" Grid.Row="1" VerticalAlignment="Top" Height="31" Width="113" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtWeightData" HorizontalAlignment="Left"  IsReadOnly="True"  Margin="52,63,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" Height="33" Grid.Column="1" TextChanged="txtWeightData_TextChanged"/>
        <Label x:Name="lblStatusData" Content="Status:"  FontWeight="Bold" HorizontalAlignment="Left" Margin="67,92,0,0" Grid.Row="1" VerticalAlignment="Top" Height="31" Width="113" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtStatusData" HorizontalAlignment="Left" Margin="52,96,0,0"  IsReadOnly="True" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" Grid.Column="1" Height="29" TextChanged="txtStatusData_TextChanged"/>
        <Label x:Name="lblLocationData" Content="Location:"  FontWeight="Bold" HorizontalAlignment="Left" Margin="67,128,0,0" Grid.Row="1" VerticalAlignment="Top" Height="38" Width="113" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtLocationData" HorizontalAlignment="Left" IsReadOnly="True" Margin="52,125,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" Grid.Column="1" Height="48" TextChanged="txtLocationData_TextChanged"/>
        <Label x:Name="lblBatteryData" Content="Battery:" FontWeight="Bold" HorizontalAlignment="Left" Margin="67,166,0,0" Grid.Row="1" VerticalAlignment="Top" Height="34" Width="113" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtBatteryData" HorizontalAlignment="Left"  IsReadOnly="True" Margin="52,173,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" Grid.Column="1" Height="34" TextChanged="txtBatteryData_TextChanged"/>
        <Label x:Name="lblParcelInDeliveryData" Content="ID of parcel:" FontWeight="Bold" HorizontalAlignment="Left" Margin="67,205,0,0" Grid.Row="1" VerticalAlignment="Top" Height="36" Width="113" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtParcelInDeliveryData" BorderBrush="White"  HorizontalAlignment="Left" IsReadOnly="True"  Margin="52,207,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" Grid.Column="1" Height="34" TextChanged="txtParcelInDeliveryData_TextChanged"/>


    </Grid>
</Window>
