<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="640" Width="800">
    <!--Window Background="pack://siteoforigin:,,,/shutterstock_547640359132541713991042368.jpg">-->

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="137*"/>
            <RowDefinition Height="175*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="\images\Drone1.jpg" Stretch="UniformToFill" />
        </Grid.Background>

        <Button x:Name="btnShowListOfDrones" FontSize="22" Content="Show List Of Drones" Margin="24,83,24,184" Click="showListOfDronesBtn_Click" FontWeight="Bold" Cursor="Hand" Grid.Row="1">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="7"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="btnShowListOfStations" FontSize="22" Content="Show List Of Stations" HorizontalAlignment="Center" Margin="0,46,0,0" FontWeight="Bold" VerticalAlignment="Top" Height="53" Width="352" Click="btnShowListOfStations_Click" Grid.Column="1" Cursor="Hand" Grid.Row="1">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="7"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="btnShowListOfParcels" FontSize="22" Content="Show List Of Parcels" HorizontalAlignment="Center" Margin="0,113,0,0" FontWeight="Bold" VerticalAlignment="Top" Height="53" Width="352" Click="btnShowListOfParcels_Click" Grid.Column="1" Cursor="Hand" Grid.Row="1">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="7"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="btnShowListOfCustomers" FontSize="22" Content="Show List Of Customers" Margin="24,204,24,63" Click="btnShowListOfCustomers_Click" FontWeight="Bold" Cursor="Hand" Grid.Row="1">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="7"/>
                </Style>
            </Button.Resources>
        </Button>
       
